<% include ./partials/header.ejs %>


<div class="ui main text container">
	<div class="ui huge header">BLOGS APP</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
				<% blogs.forEach(function(x){ %>
					<div class="item">
						<div class="image">
							<img src= "<%= x.image %>" ,width="200" height="200">
						</div>
						
						<div class = "content">
							<a class="header" href="/blogs/<%= x._id %>"><%= x.title %></a>
							
							<div class="meta">
								<span><%= x.created.toDateString() %></span>
							</div>
							
							<div class="description">
								<p><%- x.body.substring(0,100) %>.....</p>
							</div>
							
							<div class="extra">
								<a class="ui floated basic violet button" href="/blogs/<%= x._id %>">Read More
									<i class="right chevron icon"></i>
								</a>
							</div>
						</div>
						
						
					</div>
				<% }) %>
		</div>
	</div>
</div>



<% include ./partials/footer.ejs %>